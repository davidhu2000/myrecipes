<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @review do |f| %>
      <%= f.label 'Your Review' %>
      <%= f.text_area :body, rows: 10 %>

      <%= f.submit(@review.new_record? ? 'New Review' : 'Edit Review', class: "btn btn-success") %>
    <% end %>
  </div>
</div>